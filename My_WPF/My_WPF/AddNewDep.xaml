<Window x:Class="My_WPF.AddNewDep" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:My_WPF"
        mc:Ignorable="d"
        Title="Добавить новый департамент" Height="216" Width="261.5">
    <Grid Margin="1,2,1,-297" RenderTransformOrigin="0.5,0.5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="10,0,0,276"  Grid.ColumnSpan="2">
            <Label Content="" Margin="0,0,0.2,0"/>
            <Label Content="Имя" Margin="0,0,10,0" Height="31"/>
            <TextBox x:Name="tbName_Dep" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="5.8,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <Button x:Name="btnAddDep"  Visibility="Hidden" Margin="15"  VerticalAlignment="Bottom" Content="Добавить департамент" />
            <Button x:Name="btnEditDep" Visibility="Hidden" Margin="15,-30,15.2,15"  VerticalAlignment="Bottom" Content="Сохранить" />
        </StackPanel>

    </Grid>
</Window>
